@model BusinessLayer.Entities.User

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4 shadow-lg" style="max-width: 800px; background: rgba(0, 0, 0, 0.8); color: white; border-radius: 20px;box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);backdrop-filter: blur(8px);">
        <h1 class="text-center mb-4">Delete User</h1>

        <h3 class="text-center mb-4">Are you sure you want to delete this user?</h3>

        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UserName)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UserRole)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserRole)</dd>
        </dl>

        <form asp-action="Delete" class="text-center mt-4">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserName" />

            <button type="submit" value="Delete" class="btn btn-danger btn-lg px-5" style="border-radius: 12px;">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg px-5 ms-3" style="border-radius: 12px;">Back to List</a>
        </form>
    </div>
</div>
