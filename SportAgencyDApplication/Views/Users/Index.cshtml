@model IEnumerable<BusinessLayer.Entities.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Index</h1>


<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.Label("Id", "Потребителско ID")</th>
            <th>@Html.Label("UserName", "Потребителско име")</th>
            <th>@Html.Label("Email", "Имейл адрес")</th>
            <th>@Html.Label("PhoneNumber", "Телефонен номер")</th>
            <th>@Html.Label("UserRole", "Роля на потребителя")</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.UserRole)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Преглед на потрбител</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
}

